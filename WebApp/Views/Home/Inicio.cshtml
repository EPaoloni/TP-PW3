
@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_AnonimoLayout.cshtml";
}

<div class="row">
    <div class="col s12 m8" id="#action">
        @{
            switch (ViewBag.Action)
            {
                case "Ingresar":
                    @Html.Partial("pv_Ingresar")
                    break;
                case "Registrarse":
                    @Html.Partial("pv_Registrarse")
                    break;

                default:
                    @Html.Partial("pv_PublicacionMasValorada")
                    break;
            }
        }
    </div>
    <div class="col s12 m4">
        @Html.Partial("pv_Info")
    </div>
</div>