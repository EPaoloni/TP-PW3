@model Models.Metadata.UsuariosMetadata

<div class="col s12 m11 l11">
    <div class="row titulo-action">
        <div class="titulo-inicio blue-text accent-3 center">
            <h5>INICIAR SESION</h5>
        </div>
        <hr />
    </div>
    <div class="row">
        @using (Html.BeginForm()) {
            <div class="input-field col s12">
                <i class="material-icons prefix">email</i>
                <input id="icon_email" type="text" class="validate">
                <label for="icon_email">Email</label>
                <span class="helper-text" data-error="wrong" data-success="right" data-valmsg-for="Email" data-valmsg-replace="true"></span>
                @Html.ValidationMessage("Email")
            </div>
            <div class="input-field col s12">
                <i class="material-icons prefix">vpn_key</i>
                <input id="icon_vpn_key" type="password" class="validate">
                <label for="icon_vpn_key">Password</label>
                <span class="helper-text" data-error="wrong" data-success="right" data-valmsg-for="Password" data-valmsg-replace="true"></span>
            </div>
            <div class="input-field col s12">
                <div class="msg msg-alert z-depth-3" id="ErrorLogin"></div>
                <button class="btn waves-effect waves-light col s12 blue darken-3 btn-action" type="submit" name="action">
                    INGRESAR
                </button>
            </div>
        }
    </div>
</div>