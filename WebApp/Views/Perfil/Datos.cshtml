
@{
    ViewBag.Title = "Datos";
    Layout = "~/Views/Shared/_AnonimoLayout.cshtml";
}

<link href="~/Content/src/perfil.css" />

<div>
    <h2>Mi Perfil</h2>

    <div class="row">
        <button class="btn btn-primary col s2 push-s10">Mis Donaciones</button>
    </div>

    <div class="row" id="datos-container">
        <div class="col s5">
            <div class="col s12">
                <img src="~/Images/Perfil/Bulbasaur.png" height="155" alt="Little good boy"/>
            </div>
            <button class="btn btn-primary col s6 push-s3">Cambiar Foto</button>
        </div>

        <div class="col s7">
            <input class="form-control" name="nombre" placeholder="Nombre" />
            <input class="form-control" name="apellido" placeholder="Apellido" />
            <input class="form-control" name="fechaNacimiento" placeholder="Fecha de Nacimiento" />
            <button class="btn btn-primary right">Modificar</button>
        </div>
    </div>
</div>
