@using Models.Partial
@model PerfilMetaData

@{
    Layout = "~/Views/Shared/_UsuarioLayout.cshtml";
}

<div class="col s12 m12 l12">
    <div class="row titulo-action">
        <div class="titulo-inicio blue-text accent-3 center">
            <h5>PERFIL</h5>
        </div>
        <hr />
    </div>
    <div class="col s12 m4 l4 offset-m8 offset-l8">
        <button class="btn waves-effect waves-light col s12 m12 l12 blue darken-3 btn-action" id="btnMisDonaciones">
            MIS DONACIONES
        </button>
    </div>
    <div class="row">
        <form method="post" action="/Perfil/Guardar" enctype="multipart/form-data">
            <div id="LadoIzquierdo" class="col s12 m4">
                <div class="card">
                    <div class="card-image">
                        <img src="~/Images/Perfil/user-icon.png" />
                    </div>
                    <div class="file-field input-field">
                        <div class="btn col s12 m12 blue darken-3 waves-effect">
                            <span>CAMBIAR FOTO</span>
                            <input type="file">
                            @Html.TextBoxFor(m => m.Archivo, new { type= "file", name = "archivo" })
                        </div>
                    </div>
                </div>
            </div>
            <div id="LadoDerecho" class="col s12 m8">
                <div class="input-field col s12 m12">
                    @Html.TextBoxFor(m => m.Nombre, new { @class = "validate", name = "nombre" })
                    <label for="nombre">Nombre</label>
                    @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "helper-text" })
                </div>
                <div class="input-field col s12 m12">
                    @Html.TextBoxFor(m => m.Apellido, new { @class = "validate", name = "apellido" })
                    <label for="apellido">Apellido</label>
                    @Html.ValidationMessageFor(m => m.Apellido, "", new { @class = "helper-text" })
                </div>
                <div class="input-field col s12 m12 l12">
                    @Html.TextBoxFor(m => m.FechaNacimiento, new { @class = "validate datepicker", name = "fechanacimiento", id = "icon_date_range" })
                    <label for="fecha_nac">Fecha de nacimiento</label>
                    @Html.ValidationMessageFor(m => m.FechaNacimiento, "", new { @class = "helper-text" })
                </div>
                <button class="btn waves-effect waves-light col s12 blue darken-3 btn-action" id="btnIngresar" type="submit" name="action">
                    MODIFICAR
                </button>
            </div>
        </form>
    </div>
</div>